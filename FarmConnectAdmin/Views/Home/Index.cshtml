@model FarmConnectAdmin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title mb-0">Dashboard</h1>
        <p class="text-muted">Overview of your farm's performance</p>
    </div>
    <button class="btn btn-primary"><i class="fas fa-download"></i> Download Report</button>
</div>

<div class="d-flex gap-4 flex-wrap mb-4">
    <!-- User Stats Card -->
    <div class="card flex-grow-1" style="border:none; background: linear-gradient(135deg, var(--primary) 0%, var(--primary-hover) 100%); color: white;">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h6 class="text-white-50 text-uppercase mb-2" style="font-size: 0.75rem; font-weight: 700; letter-spacing: 0.05em;">Total Users</h6>
                <h2 class="mb-0 display-4" style="font-weight: 800;">@Model.UserCount</h2>
            </div>
            <div style="font-size: 3rem; opacity: 0.2;">
                <i class="fas fa-users"></i>
            </div>
        </div>
    </div>

    <!-- Product Stats Card -->
    <div class="card flex-grow-1" style="border:none; background: linear-gradient(135deg, var(--secondary) 0%, var(--secondary-hover) 100%); color: white;">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h6 class="text-white-50 text-uppercase mb-2" style="font-size: 0.75rem; font-weight: 700; letter-spacing: 0.05em;">Active Products</h6>
                <h2 class="mb-0 display-4" style="font-weight: 800;">@Model.ProductCount</h2>
            </div>
            <div style="font-size: 3rem; opacity: 0.2;">
                <i class="fas fa-box"></i>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header border-0 pb-0">
        <h5 class="card-title">System Overview</h5>
    </div>
    <div class="card-body text-center py-5">
        <div class="p-5" style="background: var(--bg-body); border-radius: var(--radius-md); border: 2px dashed var(--border-color);">
            <i class="fas fa-chart-line text-muted mb-3" style="font-size: 2rem;"></i>
            <p class="text-muted fw-medium">Analytics & Charts Module</p>
            <p class="text-muted small">Coming in the next update</p>
        </div>
    </div>
</div>
