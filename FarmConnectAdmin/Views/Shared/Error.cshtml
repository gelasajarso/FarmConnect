@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg border-start border-5 border-danger">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="text-danger mb-3" style="font-size: 3rem;">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <h1 class="display-6 text-danger fw-bold">Error Occurred</h1>
                    <p class="text-muted lead">An error occurred while processing your request.</p>
                </div>

                @if (Model.ShowRequestId)
                {
                    <div class="bg-light p-3 rounded mb-4 text-center">
                        <small class="text-muted text-uppercase fw-bold">Request ID</small>
                        <div class="font-monospace mt-1">@Model.RequestId</div>
                    </div>
                }

                <div class="alert alert-warning mb-0">
                    <h5 class="alert-heading h6"><i class="fas fa-info-circle me-1"></i> Development Mode</h5>
                    <p class="small mb-0">
                        Swapping to <strong>Development</strong> environment will display more detailed information about the error.
                    </p>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="/" class="btn btn-outline">Return to Home</a>
        </div>
    </div>
</div>
