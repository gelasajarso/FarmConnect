<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmConnect</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    @if (Context.Session.GetString("Admin") != null)
    {
        <div class="app-container">
            <aside class="sidebar">
                <div class="sidebar-brand">
                    <i class="fas fa-leaf"></i> FarmConnect
                </div>
                <div class="sidebar-nav">
                    <div class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "User" ? "active" : "")" asp-controller="User" asp-action="Index">
                            <i class="fas fa-users"></i> Users
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Product" ? "active" : "")" asp-controller="Product" asp-action="Index">
                            <i class="fas fa-box"></i> Products
                        </a>
                    </div>
                </div>
                <div class="sidebar-footer">
                    <a class="nav-link" asp-controller="Auth" asp-action="Logout" style="color: var(--danger);">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </aside>

            <main class="main-wrapper">
                <header class="top-header">
                    <div class="page-title-wrapper">
                        <!-- Breadcrumbs or small title could go here -->
                    </div>
                    <div class="user-menu">
                        <div class="d-flex align-center gap-2">
                            <div style="width: 35px; height: 35px; background: var(--primary-light); color: var(--primary); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                @Context.Session.GetString("Admin")?.Substring(0, 1).ToUpper()
                            </div>
                            <span style="font-weight: 500;">@Context.Session.GetString("Admin")</span>
                        </div>
                    </div>
                </header>
                <div class="page-content">
                    @RenderBody()
                </div>
            </main>
        </div>
    }
    else
    {
        <!-- Login Layout -->
        <div class="login-body">
            <div class="login-aside">
                <h1 style="font-size: 3rem; margin-bottom: 1rem;">FarmConnect</h1>
                <p style="font-size: 1.25rem; opacity: 0.9;">Manage your farm inventory and users with ease.</p>
            </div>
            <div class="login-content">
                @RenderBody()
            </div>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
