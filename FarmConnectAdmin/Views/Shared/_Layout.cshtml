<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmConnect</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    @if (Context.Session.GetString("Admin") != null)
    {
        <aside class="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-leaf"></i> FarmConnected
            </div>
            <nav class="nav">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                    <span class="nav-icon"><i class="fas fa-home"></i></span> Dashboard
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "User" ? "active" : "")" asp-controller="User" asp-action="Index">
                    <span class="nav-icon"><i class="fas fa-users"></i></span> Users
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Product" ? "active" : "")" asp-controller="Product" asp-action="Index">
                    <span class="nav-icon"><i class="fas fa-box"></i></span> Products
                </a>
            </nav>
            <div style="margin-top: auto;">
                <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                    <span class="nav-icon"><i class="fas fa-sign-out-alt"></i></span> Logout
                </a>
            </div>
        </aside>

        <main class="main-content">
            <header class="top-header">
                <div class="user-menu">
                    <span>Welcome, <strong>@Context.Session.GetString("Admin")</strong></span>
                </div>
            </header>
            @RenderBody()
        </main>
    }
    else
    {
        <!-- Login Layout (No Sidebar) -->
        <div class="login-body">
            @RenderBody()
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
