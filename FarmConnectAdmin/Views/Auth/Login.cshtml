@model FarmConnectAdmin.Models.LoginViewModel

@{
    ViewData["Title"] = "Welcome Back";
    Layout = "_Layout"; 
}

<div class="w-100" style="max-width: 400px;">
    <div class="text-center mb-5">
        <h2 class="fw-bold mb-2 display-6">Welcome Back!</h2>
        <p class="text-muted">Sign in to your dashboard to continue.</p>
    </div>

    <form asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
        
        <div class="form-group mb-4">
            <label asp-for="Username" class="form-label">Username</label>
            <div style="position: relative;">
                <span style="position: absolute; left: 15px; top: 12px; color: var(--text-muted);"><i class="fas fa-user"></i></span>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" style="padding-left: 40px;" />
            </div>
            <span asp-validation-for="Username" class="text-danger small mt-1 d-block"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Password" class="form-label">Password</label>
            <div style="position: relative;">
                <span style="position: absolute; left: 15px; top: 12px; color: var(--text-muted);"><i class="fas fa-lock"></i></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" style="padding-left: 40px;" />
            </div>
            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="rememberMe">
                <label class="form-check-label text-muted" for="rememberMe">Remember me</label>
            </div>
            <a href="#" class="text-decoration-none" style="color: var(--primary); font-weight: 500;">Forgot Password?</a>
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2" style="font-size: 1.1rem;">Sign In</button>
    </form>
    
    <div class="text-center mt-4">
        <p class="text-muted">Don't have an account? <a href="#" style="color: var(--primary); font-weight: 600;">Contact Support</a></p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
