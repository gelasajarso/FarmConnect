@model FarmConnectAdmin.Models.LoginViewModel

@{
    ViewData["Title"] = "Welcome Back";
    Layout = "_Layout"; 
}

<!-- Branding / Image Side -->
<div class="login-left">
    <div class="login-brand-text">
        <h1>FarmConnect</h1>
        <p>Connecting Farmers. Empowering Markets.</p>
    </div>
</div>

<!-- Form Side -->
<div class="login-right">
    <div class="login-form-container">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-2 text-dark">Welcome Back!</h2>
            <p class="text-muted">Please sign in to your dashboard.</p>
        </div>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="form-floating-custom">
                <input asp-for="Username" placeholder="Username" />
                <i class="fas fa-user"></i>
                <span asp-validation-for="Username" class="text-danger" style="font-size: 0.85rem; display: block; margin-top: 0.25rem;"></span>
            </div>

            <div class="form-floating-custom">
                <input asp-for="Password" type="password" placeholder="Password" />
                <i class="fas fa-lock"></i>
                <span asp-validation-for="Password" class="text-danger" style="font-size: 0.85rem; display: block; margin-top: 0.25rem;"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe">
                    <label class="form-check-label text-muted" for="rememberMe" style="font-size: 0.9rem;">Remember me</label>
                </div>
                <a href="#" class="text-decoration-none" style="color: var(--primary); font-size: 0.9rem; font-weight: 600;">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-primary btn-login-lg">Sign In</button>
        </form>
        
        <div class="text-center mt-4">
            <p class="text-muted" style="font-size: 0.9rem;">Don't have an account? <a href="#" style="color: var(--primary); font-weight: 600;">Contact Support</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
