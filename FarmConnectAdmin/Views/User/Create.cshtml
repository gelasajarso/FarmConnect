@model FarmConnectAdmin.Models.User

@{
    ViewData["Title"] = "Create User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header border-bottom">
                <h5 class="card-title mb-0">Create User</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div class="form-group mb-4">
                        <label asp-for="FullName" class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" placeholder="FullName" />
                        <span asp-validation-for="FullName" class="text-danger small mt-1"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                        <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Role" class="form-label">User Role</label>
                        <select asp-for="Role" class="form-control">
                            <option>Farmer</option>
                            <option>Buyer</option>
                            <option>Driver</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-outline">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Create User</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
