@model FarmConnectAdmin.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">User Details</h5>
                <span class="badge badge-outline">ID: @Model.Id</span>
            </div>
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-5">
                    <div class="user-avatar-lg">
                        @(string.IsNullOrEmpty(Model.FullName) ? "?" : Model.FullName.Substring(0, 1).ToUpper())
                    </div>
                    <div>
                        <h2 class="display-6 mb-1 fw-bold fs-3">@Model.FullName</h2>
                        <span class="badge badge-success">@Model.Role</span>
                    </div>
                </div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="text-uppercase text-muted small fw-bold mb-1">Email Address</label>
                        <div class="mb-0">@Model.Email</div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-uppercase text-muted small fw-bold mb-1">Created At</label>
                        <div class="mb-0">@(Model.CreatedAt?.ToString("MMM dd, yyyy") ?? "N/A")</div>
                    </div>
                </div>

                <div class="d-flex gap-2 border-top pt-4 mt-5">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                        <i class="fas fa-edit me-2"></i> Edit User
                    </a>
                    <a asp-action="Index" class="btn btn-outline">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
