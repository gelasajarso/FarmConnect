@model FarmConnectAdmin.Utilities.PaginatedList<FarmConnectAdmin.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title mb-0">Users</h1>
        <p class="text-muted">Manage system users and access</p>
    </div>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add User</a>
</div>

<div class="card">
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="fw-bold">@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge" style="background: var(--bg-surface-hover); color: var(--text-muted); border: 1px solid var(--border-color);">@user.Role</span>
                        </td>
                        <td class="text-right">
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline" style="padding: 0.25rem 0.5rem;" title="View"><i class="fas fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline" style="padding: 0.25rem 0.5rem;" title="Edit"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger" style="padding: 0.25rem 0.5rem;" title="Delete"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <div class="card-footer border-0 bg-transparent pt-4 d-flex justify-content-between align-items-center">
        <span class="text-muted small">Page @Model.PageIndex of @Model.TotalPages</span>
        <div class="d-flex gap-2">
            @if (Model.HasPreviousPage)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   class="btn btn-outline">
                    <i class="fas fa-chevron-left"></i> Previous
                </a>
            }
            @if (Model.HasNextPage)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   class="btn btn-outline">
                    Next <i class="fas fa-chevron-right"></i>
                </a>
            }
        </div>
    </div>
</div>
