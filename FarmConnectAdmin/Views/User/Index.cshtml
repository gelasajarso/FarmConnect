@model IEnumerable<FarmConnectAdmin.Models.User>

<h2>Users</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New User</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model)
{
        <tr>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <a asp-action="Details" asp-route-id="@user.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
