@model FarmConnectAdmin.Utilities.PaginatedList<FarmConnectAdmin.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title mb-0">Users</h1>
        <p class="text-muted">Manage system users and access</p>
    </div>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add User</a>
</div>

<div class="card">
    @if (Model.Any())
    {
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="fw-bold">@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge badge-outline">@user.Role</span>
                            </td>
                            <td class="text-right">
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline btn-sm" title="View"><i class="fas fa-eye"></i></a>
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline btn-sm" title="Edit"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm" title="Delete"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="text-muted mb-3" style="font-size: 3rem; opacity: 0.4;">
                <i class="fas fa-users-slash"></i>
            </div>
            <h5 class="text-muted">No users found</h5>
            <p class="text-secondary small">Add user accounts to manage access.</p>
            <a asp-action="Create" class="btn btn-primary mt-2"><i class="fas fa-plus"></i> Add User</a>
        </div>
    }

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <div class="card-footer border-0 bg-transparent pt-4 d-flex justify-content-between align-items-center">
        <span class="text-muted small">Page @Model.PageIndex of @Model.TotalPages</span>
        <div class="d-flex gap-2">
            @if (Model.HasPreviousPage)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   class="btn btn-outline">
                    <i class="fas fa-chevron-left"></i> Previous
                </a>
            }
            @if (Model.HasNextPage)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   class="btn btn-outline">
                    Next <i class="fas fa-chevron-right"></i>
                </a>
            }
        </div>
    </div>
</div>
