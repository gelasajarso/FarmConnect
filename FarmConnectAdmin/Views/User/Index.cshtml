@model IEnumerable<FarmConnectAdmin.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-users me-2"></i> User Management</h5>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-2"></i> Add New User</a>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="fw-bold">@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge bg-secondary">@user.Role</span>
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info text-white me-1"><i class="fas fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning text-white me-1"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
