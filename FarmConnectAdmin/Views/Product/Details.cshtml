@model FarmConnectAdmin.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Product Details</h5>
                <span class="badge" style="background: var(--primary-light); color: var(--primary);">ID: @Model.Id</span>
            </div>
            <div class="card-body p-4">
                <div class="mb-4">
                    <h2 class="display-6 mb-3">@Model.Name</h2>
                    <p class="text-muted" style="font-size: 1.1rem;">@Model.Description</p>
                </div>

                <div class="row g-4 mb-5">
                    <div class="col-6 col-md-4">
                        <label class="text-uppercase text-muted small fw-bold mb-1">Price</label>
                        <div class="h4 mb-0" style="color: var(--primary);">$@Model.Price</div>
                    </div>
                    <div class="col-6 col-md-4">
                        <label class="text-uppercase text-muted small fw-bold mb-1">Quantity</label>
                        <div class="h4 mb-0">@Model.Quantity <span class="text-muted small">@Model.Unit</span></div>
                    </div>
                </div>

                <div class="d-flex gap-2 border-top pt-4 mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                        <i class="fas fa-edit me-2"></i> Edit Product
                    </a>
                    <a asp-action="Index" class="btn btn-outline">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
