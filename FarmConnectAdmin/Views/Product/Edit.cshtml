@model FarmConnectAdmin.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header border-bottom">
                <h5 class="card-title mb-0">Edit Product</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Organic Tomatoes" />
                        <span asp-validation-for="Name" class="text-danger small mt-1"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the product..."></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group mb-4">
                            <label asp-for="Price" class="form-label">Price</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0" style="border-color: var(--border-color); color: var(--text-muted);">$</span>
                                <input asp-for="Price" class="form-control border-start-0 ps-0" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger small mt-1"></span>
                        </div>
                        <div class="col-md-6 form-group mb-4">
                            <label asp-for="Quantity" class="form-label">Quantity</label>
                            <div class="d-flex text-dark">
                                <input asp-for="Quantity" class="form-control rounded-end-0" placeholder="0" />
                                <select asp-for="Unit" class="form-control rounded-start-0" style="width: 80px; background-color: var(--bg-surface-hover);">
                                    <option value="kg">kg</option>
                                    <option value="g">g</option>
                                    <option value="L">L</option>
                                    <option value="pcs">pcs</option>
                                </select>
                            </div>
                            <span asp-validation-for="Quantity" class="text-danger small mt-1"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-outline">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Update Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
