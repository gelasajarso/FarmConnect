@model IEnumerable<FarmConnectAdmin.Models.Product>

<h2>Products</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var product in Model)
{
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Quantity</td>
            <td>
                <a asp-action="Details" asp-route-id="@product.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
